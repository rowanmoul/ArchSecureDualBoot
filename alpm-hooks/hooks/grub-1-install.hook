[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = grub

[Action]
Description = Installing GRUB to /boot...
When = PostTransaction
Exec = /usr/bin/grub-install --target=x86_64-efi --efi-directory=/efi --bootloader-id=GRUB --modules="tpm shim_lock"
Depends = grub
Depends = efibootmgr